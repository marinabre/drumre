@model Projekt.Models.RecommendViewModel

@{
    ViewBag.Title = "Recommend";
}

<script type="text/javascript" src="/Scripts/GiantHat.js"></script>
<style>
    .Profile, .Friends, .Community, .Filter {
        cursor: pointer;
    }
    .Profile:hover, .Friends:hover, .Community:hover, .Filter:hover{
        color: #fcc60a;
    }
    

</style>
<link href="~/Content/range-slider.css" rel="stylesheet">


<h2>Recommend</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div  class="Profile">
            <h3>@Html.EditorFor(model => model.Profile) Profile based recommendations</h3>
         </div>
        <p>
            Based on movies you liked on Facebook<br />
            Choose how important each category is (how many of your favourites we take into account)<br />
            Just put zero if you don't care about a category<br />
        </p>
        <div class="ProfileDetails">
            <div class="form-group">
                @Html.LabelFor(model => model.SGenres, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                  <div class="range-slider">  
                    <input class="range-slider__range form-control" id="SGenres" name="SGenres" type="range" value="10" min="0" max="20">  
                    <span class="range-slider__value">0</span>
                    </div>

            </div>
                </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Actors, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                     <div class="range-slider">
                        <input class="range-slider__range form-control" id="Actors" name="Actors" type="range" value="10" min="0" max="20">
                        <span class="range-slider__value">0</span>
                    </div>
                 </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Directors, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="range-slider">
                        <input class="range-slider__range form-control" id="Directors" name="Directors" type="range" value="10" min="0" max="20">
                        <span class="range-slider__value">0</span>
                    </div>
                </div>
            </div>
        </div>
        
        <hr />
        <div class="Friends">
            <h3>@Html.EditorFor(model => model.Friends) Friends based recommendations</h3>
        </div>        
        <p>
            Watch movies that your friends liked<br />
            Use the properties below to filter your friends<br />
            Note: CocoaDuck can only search the friends who also use CocoaDuck <br />
            The more friends you invite to join CocoaDuck, the better the recommendations will be :)           
        </p>

        <div class="FriendsDetails">
            <div class="form-group">
                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Gender)
                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaxAgeDifference, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="range-slider">
                        <input class="range-slider__range form-control" id="MaxAgeDifference" name="MaxAgeDifference" type="range" value="0" min="0" max="50">
                        <span class="range-slider__value">0</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MinimalFriendsTogether, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="range-slider">
                        <input class="range-slider__range form-control" id="MinimalFriendsTogether" name="MinimalFriendsTogether" type="range" value="0" min="0" max="100">
                        <span class="range-slider__value">0</span>
                    </div>
               </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MinimalMoviesTogether, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="range-slider">
                        <input class="range-slider__range form-control" id="MinimalMoviesTogether" name="MinimalMoviesTogether" type="range" value="0" min="0" max="100">
                        <span class="range-slider__value">0</span>
                    </div>
                </div>
            </div>
        </div>        
        <hr />
        <div class="Community">
            <h3>@Html.EditorFor(model => model.Community) Community based recommendations</h3>
        </div>        
        <p>
            Based on the entire CocoaDuck community<br />
            Use the properties below so we know who to compare you with 
        </p>

        <div class="CommunityDetails hidden">
            <div class="form-group">
                @Html.LabelFor(model => model.GenderComm, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.GenderComm)
                        @Html.ValidationMessageFor(model => model.GenderComm, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MaxAgeDifferenceComm, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="range-slider">
                        <input class="range-slider__range form-control" id="MaxAgeDifferenceComm" name="MaxAgeDifferenceComm" type="range" value="0" min="0" max="50">
                        <span class="range-slider__value">0</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MinimalFriendsTogetherComm, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="range-slider">
                        <input class="range-slider__range form-control" id="MinimalFriendsTogetherComm" name="MinimalFriendsTogetherComm" type="range" value="0" min="0" max="100">
                        <span class="range-slider__value">0</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MinimalMoviesTogetherComm, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="range-slider">
                        <input class="range-slider__range form-control" id="MinimalMoviesTogetherComm" name="MinimalMoviesTogetherComm" type="range" value="0" min="0" max="100">
                        <span class="range-slider__value">0</span>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="Filter">
            <h3>@Html.EditorFor(model => model.Filter) Filter</h3>
        </div>
        <p>
            Maybe you still want to filter out recommended thigs - if you do, this is the place to do it!
        </p>

        <div class="FilterDetails hidden">
            <link rel="stylesheet" href="bootstrap.css" />

            <script src="~/Scripts/bootstrap-select.min.js"></script>
            <script src="~/Scripts/jquery-3.1.1.min.js"></script>

            <link href="~/Content/bootstrap-select.css" rel="stylesheet">
            <link href="~/Content/range-slider.css" rel="stylesheet">
            <link href="~/Content/multirange.css" rel="stylesheet">
            @Styles.Render("/Content/css")
            <style>
                        .range-slider__range.form-control {
                            height: 0;
                            font-size: 14px;
                            line-height: 1.42857143;
                            color: #555;
                            padding: 3px 12px;
                            display: inline-block;
                        }

                        .range-slider__value {
                            -ms-transform: rotate(45deg); /* IE 9 */
                            -webkit-transform: rotate(45deg); /* Chrome, Safari, Opera */
                            transform: rotate(30deg);
                            margin: 20px;
                        }

                        .slider_left {
                            margin-left: -15px;
                        }

                        .slider_right {
                            margin-left: -60px;
                        }

                        .multirange.ghost {
                            left: -9%;
                        }

                        .range-slider__value.inverted:after {
                            border-right: 7px solid #fda123;
                        }

                        .inverted {
                            color: #39100a;
                            background: #fda123;
                            /*-webkit-filter: invert(100%);
                filter: invert(100%);*/
                        }

                        .range-slider__range.inverted::-webkit-slider-thumb,
                        .range-slider__range.inverted::-moz-range-thumb {
                            background: #fda123;
                        }

                            .range-slider__range.inverted::-webkit-slider-thumb:hover,
                            .range-slider__range.inverted:active::-webkit-slider-thumb,
                            .range-slider__range.inverted::-moz-range-thumb:hover,
                            .range-slider__range.inverted:active::-moz-range-thumb {
                                background: #442200;
                            }

                        .text-info {
                            color: #442200;
                        }
            </style>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <p>
                        When naming actors and directors split them using comma (,) - for instance:
                        John Doe, Jane Doe
                    </p>
                    <div class="form-group">
                        <div class="col-md-1"></div>
                        <h4 class="col-md-2">Actors</h4>
                        <div class="col-md-8">
                            <input type="text" name="FilterActors" id="FilterActors" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-1"></div>
                        <h4 class="col-md-2">Directors</h4>
                        <div class="col-md-8">
                            <input type="text" name="FilterDirectors" id="FilterDirectors" class="form-control" />
                        </div>
                    </div>

                    @{
                        List<SelectListItem> genresToChoose = ViewBag.genres;
                    }
                    <div class="form-group">
                        <div class="col-md-1"></div>
                        <h4 class="col-md-2">Genres</h4>
                        <div class="col-md-8">
                            @Html.DropDownList("Genres", genresToChoose, htmlAttributes: new { @class = "selectpicker", multiple = "multiple", tabindex = "4" })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1"></div>
                            <h4 class="col-md-2">I have time (in minutes)</h4>
                            <div class="col-md-8">
                                <div class="range-slider">
                                    <input id="RuntimeFrom" name="RuntimeFrom" type="range" multiple="" value="0" min="0" max="350" step="10" class="multirange original range-slider__range form-control">
                                    <span class="range-slider__value slider_left">0</span>
                                    <input id="RuntimeTo" name="RuntimeTo" type="range" multiple="" value="350" min="0" max="350" step="10" class="multirange ghost range-slider__range form-control">
                                    <span class="range-slider__value slider_right">0</span>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1"></div>
                            <h4 class="col-md-2">Year</h4>
                            <div class="col-md-8">
                                <div class="range-slider">
                                    <input id="YearFrom" name="YearFrom" type="range" multiple="" value="1900" min="1900" max="2017" step="1" class="multirange original range-slider__range form-control">
                                    <span class="range-slider__value slider_left inverted">0</span>
                                    <input id="YearTo" name="YearTo" type="range" multiple="" value="2017" min="1900" max="2017" step="1" class="multirange ghost range-slider__range form-control">
                                    <span class="range-slider__value slider_right inverted">0</span>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1"></div>
                            <h4 class="col-md-2">IMDB Rating</h4>
                            <div class="col-md-8">
                                <div class="range-slider">
                                    <input type="range" id="IMDBRatingFrom" name="IMDBRatingFrom" multiple="" value="0" min="0" max="10" step="0.1" class="multirange original range-slider__range form-control">
                                    <span class="range-slider__value slider_left">0</span>
                                    <input type="range" id="IMDBRatingTo" name="IMDBRatingTo" multiple="" value="10" min="0" max="10" step="0.1" class="multirange ghost range-slider__range form-control">
                                    <span class="range-slider__value slider_right">0</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1"></div>
                            <h4 class="col-md-2">Metascore Rating</h4>
                            <div class="col-md-8">
                                <div class="range-slider">
                                    <input type="range" id="MetascoreRatingFrom" name="MetascoreRatingFrom" multiple="" value="0" min="0" max="100" step="1" class="multirange original range-slider__range form-control">
                                    <span class="range-slider__value slider_left inverted">0</span>
                                    <input type="range" id="MetascoreRatingTo" name="MetascoreRatingTo" multiple="" value="100" min="0" max="100" step="1" class="multirange ghost range-slider__range form-control">
                                    <span class="range-slider__value slider_right inverted">0</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1"></div>
                            <h4 class="col-md-2">RottenTomato Rating</h4>
                            <div class="col-md-8">
                                <div class="range-slider">
                                    <input type="range" id="TomatoRatingFrom" name="TomatoRatingFrom" multiple="" value="0" min="0" max="100" step="1" class="multirange original range-slider__range form-control">
                                    <span class="range-slider__value slider_left">0</span>
                                    <input type="range" id="TomatoRatingTo" name="TomatoRatingTo" multiple="" value="100" min="0" max="100" step="1" class="multirange ghost range-slider__range form-control">
                                    <span class="range-slider__value slider_right">0</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1"></div>
                            <h4 class="col-md-2">Facebook Shares</h4>
                            <div class="col-md-8">
                                <div class="range-slider">
                                    <input type="range" id="FBSharesFrom" name="FBSharesFrom" multiple="" value="0" min="0" max="140000" step="1000" class="multirange original range-slider__range form-control">
                                    <span class="range-slider__value slider_left inverted">0</span>
                                    <input type="range" id="FBSharesTo" name="FBSharesTo" multiple="" value="140000" min="0" max="140000" step="1000" class="multirange ghost range-slider__range form-control">
                                    <span class="range-slider__value slider_right inverted">0</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1"></div>
                            <h4 class="col-md-2">Facebook Likes</h4>
                            <div class="col-md-8">
                                <div class="range-slider">
                                    <input type="range" id="FBLikesFrom" name="FBLikesFrom" multiple="" value="0" min="0" max="176000" step="1000" class="multirange original range-slider__range form-control">
                                    <span class="range-slider__value slider_left">0</span>
                                    <input type="range" id="FBLikesTo" name="FBLikesTo" multiple="" value="176000" min="0" max="176000" step="1000" class="multirange ghost range-slider__range form-control">
                                    <span class="range-slider__value slider_right">0</span>
                                </div>
                            </div>
                        </div>
                    </div>

        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Recommend me something!" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/range-slider.js"></script>
    <script type="text/javascript" src="~/Scripts/multirange.js"></script>
}

